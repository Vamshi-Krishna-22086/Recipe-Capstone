                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:onClick="onChecked"
                android:text="Eastern European"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/deutschland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:onClick="onChecked"
                android:text="Deutschland"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/chineseAndMongolian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:onClick="onChecked"
                android:text="Chinese and Mongolian"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/centralAmerican"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"

<!--                 android:layout_height="wrap_content"-->
<!--                 android:text="Delete"-->
<!--                 android:backgroundTint="@color/pink"-->
<!--                 android:fontFamily="sans-serif-medium"-->
<!--                 />-->

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>